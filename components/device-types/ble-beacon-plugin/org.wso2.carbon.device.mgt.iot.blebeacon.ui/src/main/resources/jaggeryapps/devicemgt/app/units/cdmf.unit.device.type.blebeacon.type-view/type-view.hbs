    <div id="download-device-modal-content" class="hide">
        <div class="modal-content">
            <div class="row">
                <div class="col-md-7  center-container">
                    <h2>Enter eddystone beacon details</h2>
                    <br/>
                    <form id="eddystoneForm">
                        <div id="invalid-username-error-msg" class="alert alert-danger hidden"
                             role="alert">
                            <i class="icon fw fw-error"></i><span></span>
                        </div>
                        <div class="control-group">
                            <div class="controls">
                                Beacon name <br/>
                                <input class="new-beacon-name" style="color:#3f3f3f;padding:5px"
                                       type="text"
                                       name="beaconName" size="60" required>
                                <br/>
                                <br/>Namespace<br/>
                                <input class="namespace" style="color:#3f3f3f;padding:5px"
                                       type="text"
                                       name="namespcace" size="60" required>
                                <br/>
                                <br/>Instance<br/>
                                <input class="instance" style="color:#3f3f3f;padding:5px"
                                       type="text"
                                       name="instance" size="60" required>
                                <br/>
                                <br/>Location<br/>
                                <input class="location" style="color:#3f3f3f;padding:5px"
                                       type="text"
                                       name="location" size="60" required>
                                <br/>
                            </div>
                        </div>
                        <div class="buttons" style="padding-bottom: 0px">
                            <a class="btn btn-operations" onclick="addEddystone()">Add beacon</a>
                            &nbsp;&nbsp;
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


