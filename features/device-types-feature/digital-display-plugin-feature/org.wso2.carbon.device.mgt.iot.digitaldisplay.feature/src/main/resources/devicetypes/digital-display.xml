<DeviceTypeConfiguration name="digitaldisplay">
    <Features>
        <Feature code="restart-browser">
            <Name>Restart Browser</Name>
            <Description>Restart Browser in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/restart-browser" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="terminate-display">
            <Name>Terminate Display</Name>
            <Description>Terminate all running process in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/terminate-display" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="restart-display">
            <Name>Restart Display</Name>
            <Description>Restart Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/restart-display" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="edit-sequence">
            <Name>Edit Sequence</Name>
            <Description>Search through the sequence and edit requested resource in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/edit-sequenc" method="POST">
                <FormParameters>
                    <Parameter>name</Parameter>
                    <Parameter>attribute</Parameter>
                    <Parameter>new-value</Parameter>
                </FormParameters>
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="upload-content">
            <Name>Upload Content</Name>
            <Description>Search through the sequence and edit requested resource in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/upload-content" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
                <FormParameters>
                    <Parameter>remote-path</Parameter>
                    <Parameter>screen-name</Parameter>
                </FormParameters>
            </Operation>
        </Feature>

        <Feature code="add-resource">
            <Name>Add Resource</Name>
            <Description>Add new resource end to the existing sequence in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/add-resource" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
                <FormParameters>
                    <Parameter>type</Parameter>
                    <Parameter>time</Parameter>
                    <Parameter>path</Parameter>
                    <Parameter>name</Parameter>
                    <Parameter>position</Parameter>
                </FormParameters>
            </Operation>
        </Feature>

        <Feature code="remove-resource">
            <Name>Remove Resource</Name>
            <Description>Delete a resource from sequence in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/remove-resource" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
                <FormParameters>
                    <Parameter>name</Parameter>
                </FormParameters>
            </Operation>
        </Feature>

        <Feature code="restart-server">
            <Name>Restart Server</Name>
            <Description>Stop HTTP Server running in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/restart-server" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="screenshot">
            <Name>Take Screenshot</Name>
            <Description>Show current view in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/screenshot" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="get-device-status">
            <Name>Get Device Statistics</Name>
            <Description>Current status in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/get-device-status" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>

        <Feature code="get-content-list">
            <Name>Get Content List</Name>
            <Description>Content List in Digital Display</Description>
            <Operation context="/digitaldisplay/device/{deviceId}/get-content-list" method="POST">
                <QueryParameters>
                    <Parameter>sessionId</Parameter>
                </QueryParameters>
            </Operation>
        </Feature>
    </Features>

    <ProvisioningConfig>
        <SharedWithAllTenants>false</SharedWithAllTenants>
    </ProvisioningConfig>

    <PushNotificationProvider type="MQTT">
        <FileBasedProperties>true</FileBasedProperties>
        <!--if file based properties is set to false then the configuration will be picked from platform configuration-->
        <ConfigProperties>
            <Property Name="mqttAdapterName">digitaldisplay.mqtt.adapter</Property>
            <Property Name="url">tcp://localhost:1886</Property>
            <Property Name="username">admin</Property>
            <Property Name="password">admin</Property>
            <Property Name="dcrUrl">https://localhost:9443/dynamic-client-web/register</Property>
            <Property Name="qos">0</Property>
            <Property Name="scopes"/>
            <Property Name="clearSession">true</Property>
        </ConfigProperties>
    </PushNotificationProvider>

    <License>
        <Language>en_US</Language>
        <Version>1.0.0</Version>
        <Text>This is license text</Text>
    </License>

</DeviceTypeConfiguration>